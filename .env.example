# Database Configuration
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_PORT=5432
DB_NAME=decision_agent

# Slack Configuration (OAuth - tokens are stored per-workspace in DB)
SLACK_CLIENT_ID=your_client_id_here
SLACK_CLIENT_SECRET=your_client_secret_here
SLACK_SIGNING_SECRET=your_signing_secret_here
SLACK_APP_ID=your_app_id_here

# Token Encryption (required for secure token storage)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
TOKEN_ENCRYPTION_KEY=your_encryption_key_here

# App Base URL (for OAuth redirects - use ngrok URL for local dev)
# Example: https://your-app.ngrok-free.dev
APP_BASE_URL=http://localhost:8000

# AI Configuration (optional - LiteLLM with OpenRouter)
OPENROUTER_API_KEY=

# Zoho OAuth Configuration (for multi-tenant CRM integration)
# Register your application at: https://api-console.zoho.com/
ZOHO_CLIENT_ID=your_zoho_client_id_here
ZOHO_CLIENT_SECRET=your_zoho_client_secret_here
# Optional: Zoho data center URL (defaults to .com)
# Options: https://accounts.zoho.com (US/Global), https://accounts.zoho.in (India), https://accounts.zoho.eu (Europe)
ZOHO_ACCOUNTS_URL=https://accounts.zoho.com
ZOHO_API_DOMAIN=https://www.zohoapis.com

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000